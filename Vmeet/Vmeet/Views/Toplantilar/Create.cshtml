@model Vmeet.Models.Toplanti

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row" style="background-color:#ffffff">
            <div class="col-lg-12">
                <h4 class="page-header" style="color:#31708f">
                    Yeni Toplantı
                </h4>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      
        <div style="margin-left: 185px;">
            <div class="form-group">
                @Html.LabelFor(model => model.ToplantiAdi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ToplantiAdi, new { htmlAttributes = new {style= "width: 499px;" } })
                    @Html.ValidationMessageFor(model => model.ToplantiAdi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Konu, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Konu, new { style= "width: 500px; height: 86px;" })
                    @Html.ValidationMessageFor(model => model.Konu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BaslamaZamani, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BaslamaZamani, new { htmlAttributes = new {  placeholder = "dd.mm.yyyy 00:00" }})
                    @Html.ValidationMessageFor(model => model.BaslamaZamani, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.BitisZamani, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BitisZamani, new { htmlAttributes = new { placeholder = "dd.mm.yyyy 00:00" } })
                    @Html.ValidationMessageFor(model => model.BitisZamani, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.OzelMi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.OzelMi)
                        @Html.ValidationMessageFor(model => model.OzelMi, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Oluştur" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Dön", "Index")
</div>
