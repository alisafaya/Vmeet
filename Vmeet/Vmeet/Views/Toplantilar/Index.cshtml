@model IEnumerable<Vmeet.Models.Toplanti>

@{
    ViewBag.Title = "Index";
}


<div id="page-wrapper">
    <div class="row" style="background-color:#ffffff">
        <div class="col-lg-12">
            <h2 class="page-header" style="color:#31708f">
                Toplantılar
            </h2>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ToplantiAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Konu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BaslamaZamani)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BitisZamani)
                </th>              
              
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @Html.ActionLink(item.ToplantiAdi,"Index","Toplanti",new { id = item.ID },null)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Konu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BaslamaZamani)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BitisZamani)
                    </td>
                   
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>