@model Vmeet.Models.Toplanti

@{
    ViewBag.Title = "edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="row" style="background-color:#ffffff">
            <div class="col-lg-12">
                <h4 class="page-header" style="color:#31708f">
                    Toplantı
                </h4>
            </div>
        </div>
       
          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          @Html.HiddenFor(model => model.ID)

        <div style="margin-right: 185px ;">
            <div class="form-group">
                <label for="model => model.ToplantiAdi" class="control-label col-md-2" style="text-align:left"> Toplantı Adı: </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ToplantiAdi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ToplantiAdi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="model => model.Konu" class="control-label col-md-2" style="text-align:left"> Toplantı Konusu: </label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Konu, new { style = "width: 953px;" })
                    @Html.ValidationMessageFor(model => model.Konu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="model => model.BaslamaZamani" class="control-label col-md-2" style="text-align:left"> Başlama Zamanı: </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BaslamaZamani, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BaslamaZamani, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="model => model.BitisZamani" class="control-label col-md-2" style="text-align:left"> Bitiş Zamanı: </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BitisZamani, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BitisZamani, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="model => model.OzelMi" class="control-label col-md-2" style="text-align:left"> Özel Mi? </label>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.OzelMi)
                        @Html.ValidationMessageFor(model => model.OzelMi, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Dön", "Index")
</div>
